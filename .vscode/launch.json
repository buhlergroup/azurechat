{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Next.js: debug server-side (Turbopack)",
      "type": "node-terminal", 
      "request": "launch",
      "command": "npm run dev:turbo-debug",
      "cwd": "${workspaceFolder}/src",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Next.js: debug client-side",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/src",
      "sourceMaps": true,
      "skipFiles": ["<node_internals>/**", "node_modules/**"]
    },
    {
      "name": "Next.js: debug full stack (Webpack)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/src/node_modules/next/dist/bin/next",
      "args": ["dev"],
      "cwd": "${workspaceFolder}/src",
      "runtimeArgs": ["--inspect"],
      "skipFiles": ["<node_internals>/**", "node_modules/**"],
      "env": {
        "NODE_ENV": "development"
      },
      "sourceMaps": true,
      "serverReadyAction": {
        "action": "debugWithChrome",
        "killOnServerStop": true,
        "pattern": "- Local:.+(https?://.+)",
        "uriFormat": "%s",
        "webRoot": "${workspaceFolder}/src"
      }
    },
    {
      "name": "Attach to Next.js",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "skipFiles": ["<node_internals>/**", "node_modules/**"],
      "sourceMaps": true
    }
  ]
}